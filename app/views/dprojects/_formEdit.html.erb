<%= simple_form_for(@dproject) do |f| %>
  <%= f.error_notification %>
  <%= f.input :assigned_to_eq, as: :hidden, input_html: { value: params[:q][:assigned_to_eq] } if params[:q] && params[:q][:assigned_to_eq] %>
  <%= f.input :status_eq, as: :hidden, input_html: { value: params[:q][:status_eq] } if params[:q] && params[:q][:status_eq] %>
  <%= f.input :school_name_eq, as: :hidden, input_html: { value: params[:q][:school_name_eq] } if params[:q] && params[:q][:school_name_eq] %>
  <%= f.input :school_route_eq, as: :hidden, input_html: { value: params[:q][:school_route_eq] } if params[:q] && params[:q][:school_route_eq] %>
  <%= f.input :id_eq, as: :hidden, input_html: { value: params[:q][:id_eq] } if params[:q] && params[:q][:id_eq] %>
  <%= f.input :invoice_status_eq, as: :hidden, input_html: { value: params[:q][:invoice_status_eq] } if params[:q] && params[:q][:invoice_status_eq] %>


  <%= f.input :s, as: :hidden, input_html: { value: params[:q][:s] } if params[:q] && params[:q][:s] %>

<div class="form-inputs">
<div class="row">
  <div class="col-xs-3">
    School <br />
    <%= @dproject.school.dname %>
  </div>
  <div class="col-xs-1">
    Account <br />
    <%= @dproject.school.scode %>
  </div>
  <div class="col-xs-2">
    Requested by
    <%= f.input :requested_by, :label => false %>
  </div>
  <div class="col-xs-3">
    Contact Email
    <%= f.input :contact_email, :label => false %>
  </div>
  <div class="col-xs-3">
    Item Type<br />
      <div class="col-xs-12">
      <%= f.select(:project_type, ["Award", "Background", "Banner", "Bookmark", "Brochure", "Business Card", "Calendar", "Catalog", "Flyer", "ID Cards", "Large Poster", "Misc", "Notepads", "Pads", "Planner/Handbook", "Postcard", "Posters", "Pricelist", "Programs", "Stickers", "Ticket", "Yearbook"], {:prompt => "Select item"}, {:class => "form-control"}) %>
      </div>
  </div>
</div>
<br />
<hr>
<div class="row">
  <div class="col-xs-2">
    Date Originated <br />
    <%= @dproject.created_at.try(:strftime, '%b %e, %Y') %>
  </div>
  <div class="col-xs-2">
    Due date <br />
    <%= f.date_field(:due_date, {:class => "form-control"}) %>
  </div>
  <div class="col-xs-2">
    Must deliver date <br />
    <%= f.date_field(:must_date, {:class => "form-control"}) %>
  </div>
  <div class="col-xs-3">
    Assigned to <br />
    <%= f.select(:assigned_to, ["Unassigned", "Katie", "Sydnee", "Kemoyah", "Ethan", "Grace", "Ashley", "Heather", "Zaira", "Sunshine", "Jordan", "Erinn", "Developer", "Print"], {}, {:class => "form-control"}) %>
  </div>
  <div class="col-xs-3">
    Assigned by <br />
    <%= f.select(:assigned_by, ["", "Katie", "Sydnee", "Kemoyah", "Alex", "Nick"], {}, {:class => "form-control"}) %>
  </div>
</div>
<br />
<hr>
<div class="row">
  <div class="col-xs-3">
    Delivery Method <br />
    <%= f.select(:delivery_type, ["Hand Deliver", "Ship", "Pick Up"], {}, {:class => "form-control"}) %>
  </div>
  <div class="col-xs-2">
    Route <br />
    <%= @dproject.school.route %>
  </div>
  <div class="col-xs-7">
    Shipping instructions <br />
    <%= f.input :shipping_instructions, :label => false %>
  </div>
</div>
<div class="row">
  <div class="col-xs-3">
    Delivered <br />
    <%= f.date_field(:delivery_date, {:class => "form-control"}) %>
  </div>
  <div class="col-xs-3">
    Tracking #<br />
    <%= f.input :tracking_number, :label => false %>
  </div>
  <div class="col-xs-3">
    Delivered by<br />
    <%= f.input :delivered_by, :label => false %>
  </div>
  <div class="col-xs-3">
    Recieved by<br />
    <%= f.input :recieved_by, :label => false %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-12">
    Project path <br />
    <%= f.input :project_path, :input_html => {:rows => 1}, :label => false %>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    Request <br />
    <%= f.input :description, :input_html => {:rows => 5}, :label => false %>
  </div>
  <div class="col-xs-3">
    Changes <br />
    <%= f.input :project_changes, :input_html => {:rows => 5}, :label => false %>
  </div>
  <div class="col-xs-3">
    Change Log <br />
    <%= f.input :change_log, :input_html => {:rows => 5}, :label => false %>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    Design Instructions <br />
    <%= f.input :design_instructions, :input_html => {:rows => 5}, :label => false %>
  </div>
  <div class="col-xs-3">
    Printing Instructions <br />
    <%= f.input :printing_instructions, :input_html => {:rows => 5}, :label => false %>
  </div>
  <div class="col-xs-3" style="text-align: center;">
    Invoicing <br />
    <%= f.select(:invoice_status, ["", "Needs Invoice", "Has Invoice", "Invoice Paid"], {}, {:class => 'form-control'}) %>
    Invoice Notes <br />
    <%= f.input :invoice_notes, :input_html => {:rows => 2}, :label => false %>
  </div>
</div>
<div class="row">
  <div class="col-xs-2">
    Status <br />
    <%= f.select(:status, ["", "Started", "Ready to Proof", "Proof sent", "Changes", "New proof ready", "New proof sent", "Follow up sent", "Follow up sent #2", "Follow up sent #3", "Ready to print", "On Hold", "Printed", "Packaged", "In Transit", "Delivered"], {}, {:class => 'form-control'}) %>
  </div>
  <div class="col-xs-2">
    Status Changed<br />
    <%= @dproject.status_date.try(:strftime, '%b %e, %Y') %>
  </div>
  <br />
  <div class="form-actions col-xs-2" style="text-align: center;">
  </div>
  <div class="form-actions col-xs-3" style="text-align: center;">
    <%= link_to 'Packing Slip', dproject_packingslip_path(@dproject.id), {class: 'form-control'} %>
  </div>

<!-- Invoicing div, this buttion takes you to the invoice.html.erb code -->
  <div class="form-actions col-xs-3" style="text-align: center;">
  <%= link_to 'Invoicing', dproject_invoices_path(@dproject, @invoice), {class: 'form-control'} %>
</div>

<br /><br />
</div>
<%= f.button :submit, "Update Project" %>
<br /><br />

<div class="row">
    <div class="col-sm-3">
        Attach
    </div>
    <div class="col-sm-3">
        Comment
    </div>
    <div class="col-sm-4">
        Download Link
    </div>
    <div class="col-sm-2">
        Delete?
    </div>
</div>

<%= f.simple_fields_for :dattachments do |builder| %>
  <%= render 'dattachment_fields', f: builder %>
<% end %>

<%= link_to_add_fields "Add Attachments", f, :dattachments %>

<br /><br />
<%= link_to("Previous Project", bysearch_dprojects_path(q: @q, id: @dproject.id, direction: -1)) if @dproject.sequential_dproject(@q, -1) %> |
<%= link_to("Next Project", bysearch_dprojects_path(q: @q, id: @dproject.id, direction: 1)) if @dproject.sequential_dproject(@q, 1) %> 
</div>
<% end %> 