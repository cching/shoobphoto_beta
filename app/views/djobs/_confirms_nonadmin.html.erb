          <th>Reconf Call</th>
          <th>Reconf</th>
          <th>Reconf Y/N</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @djobs.each do |djob| %>
          <tr>
            <td width="8%" class="dotted" ><%= djob.school.scode %></td>
            <td width="8%" class="dotted" ><%= djob.school.name %></td>
            <td width="8%" class="dotted" ><%= djob.JOB %></td>
            <td width="8%" class="dotted" ><%= djob.JOBTYPE %></td>
            <td width="8%" class="dotted" ><%= djob.DATE.try(:strftime, '%a, %b %e, %Y') %></td>
            <td width="8%" class="dotted" ><%= djob.STARTTIME %></td>
            <td width="8%" class="dotted" ><%= djob.TRIGS %></td>
            <td width="8%" class="dotted" ><%= djob.PRICELIST %></td>
            <td width="8%" class="dotted" ><%= djob.CONF_CALL %></td>
            <td width="8%" class="dotted" ><%= djob.CONF %></td>
            <td width="8%" class="dotted" ><%= djob.CONF_YN %></td>
            <td width="8%" class="dotted" ><%= djob.RECONFIRM_CALL %></td>
            <td width="8%" class="dotted" ><%= djob.RECONF %></td>
            <td width="8%" class="dotted" ><%= djob.RECONFYN %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-xs-1">
    </div>
</div>